<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= converting_to_jpy(@property.rent) %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remark %>
</p>

<% n = 0 %>
<% @nearest_stations.each do | nearest_station | %>
  <% if @property.nearest_stations.any? %>

  <h3>最寄り駅<%= n += 1 %></h3>
  
      <div class="route">
        <strong>路線名</strong>
        <%= nearest_station.text_field :route %>
      </div>
  
      <div class="station_name">
        <strong>駅名</strong>
        <%= nearest_station.text_field :station_name %>
      </div>
  
      <div class="on_foot">
      <strong>徒歩分数</strong>
        <%= nearest_station.text_field :on_foot %>分
      </div>
  
      <% end %>
