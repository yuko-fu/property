<p id="notice"><%= notice %></p>

<h1>最寄駅一覧</h1>

<table>
  <thead>
    <tr>
      <th>路線名</th>
      <th>駅名</th>
      <th>徒歩分数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nearest_stations.each do |nearest_station| %>
      <tr>
        <td><%= nearest_station.route %></td>
        <td><%= nearest_station.station_name %></td>
        <td><%= nearest_station.on_foot %></td>
        <td><%= link_to '詳細', nearest_station %></td>
        <td><%= link_to '編集', edit_nearest_station_path(nearest_station) %></td>
        <td><%= link_to '削除', nearest_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

